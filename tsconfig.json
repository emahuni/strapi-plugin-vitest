{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    /* Disable emitting files if any type checking errors are reported. */
    "noEmitOnError": false,
    "jsx": "react"
  },
  "include": [
    // Include the root directory
    "src/server",
    // Force the JSON files in the src folder to be included
    "src/**/*.json",
    "src/admin/src",
    // include testing utils
    "src/strapi-test-utils.ts", // this is a symlink to the actual file in harness, reason ts wants to compile files in rootDir only
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    // Do not include test files
    "**/*.test.ts"
  ]
}
